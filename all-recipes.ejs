<%- include('partials/header', {title: 'Pantry+ All Recipes', user:user}) %>

<h1 style="font-size: 55px; margin-top: 50px; font-weight: bolder;">All Recipes</h1>

<h4 style="margin-top: 20px; font-weight:lighter;">View and manage all your recipes</h4>

<div class="container" style="width: 90%;">
    <div class="mt-3 d-flex justify-content-between mb-4" style="margin-top: 20px; align-items: center;">
        <div>
            <a href="/api/add-recipe-33968748?userId=<%=user.userId%>" class="btn my-button">Add New Recipe</a>
            <a href="/api/delete-recipe-33968748?userId=<%=user.userId%>" class="btn q-action-button" style="--border-color:red">Delete Recipe</a>
        </div>
        <h5><%= recipes.length %> Recipes</h5>
    </div>

    <div class="card" style="width: 100%; padding: 10px;">
        <div class="card-body" style="text-align: start; padding: 20px;">
            <h4>Recipe Table</h4>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Recipe ID</th>
                        <th>Title</th>
                        <th>Chef</th>
                        <th>Meal Type</th>
                        <th>Cuisine</th>
                        <th>Difficulty</th>
                        <th>Prep Time</th>
                        <th>Servings</th>
                        <th>Created</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% recipes.forEach(recipe => { %>
              
                    <tr>
                        <td><%= recipe.recipeId%></td>
                        <td><%= recipe.title%></td>
                        <td><%= recipe.chef%></td>
                        <td><%= recipe.mealType%></td>
                        <td><%= recipe.cuisineType%></td>
                        <td><%= recipe.difficulty%></td>
                        <td><%= recipe.prepTime%> min</td>
                        <td><%= recipe.servings%></td>
                        <td><%= recipe.createdDate.toISOString().split("T")[0]; %></td>
                        <td>
                            <% if (recipe.userId === user.userId) { %>
                            <form action="/api/delete-recipe-33968748?userId=<%= user.userId %>" method="POST" 
                                  onsubmit="return confirm('Are you sure you want to delete <%= recipe.title %>?')" 
                                  style="display: inline;">
                                <input type="hidden" name="recipeId" value="<%= recipe.recipeId %>">
                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete recipe">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                            <% } else { %>
                            <span class="text-muted">-</span>
                            <% } %>
                        </td>
                    </tr>
                    
               
                    <tr>
                        <td colspan="10" style="padding: 0; background-color: #f8f9fa;">
                            <div style="padding: 15px;">
                                <div class="row">
                            
                                    <div class="col-md-6">
                                        <h6><strong>Ingredients:</strong></h6>
                                        <ul>
                                            <% recipe.ingredients.forEach(ingredient => { %>
                                            <li><%= ingredient %></li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                    
                         
                                    <div class="col-md-6">
                                        <h6><strong>Instructions:</strong></h6>
                                        <ol>
                                            <% recipe.instructions.forEach(instruction => { %>
                                            <li><%= instruction %></li>
                                            <% }) %>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="card-body" style="text-align: start; padding: 10px;"></div>
    </div>
</div>

<%- include('partials/footer', {pageName : "All Recipes"}) %>